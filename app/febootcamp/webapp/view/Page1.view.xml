<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:controls="sap.viz.ui5.controls"
    xmlns:viz="sap.viz.ui5.controls.common.feeds"
    xmlns:vizData="sap.viz.ui5.data"

    controllerName="febootcamp.controller.Page1">

    <Page id="page1" title="{i18n>page1}">
        <Title text="Hello, Rochelle Ann" level="H1" class="page1Title" />
        <Button id="page1Button" text="Click to say Hello!" press="onButtonPress" icon="sap-icon://message-popup"/>
        
        <Panel expandable="true" expanded="true" headerText="Products Chart">
            <content>
                <controls:VizFrame id="idVizFrame" vizType="column" width="100%" height="400px">
                    <controls:dataset>
                        <!-- Bind to Products array from JSONModel -->
                        <vizData:FlattenedDataset data="{/Products}">
                            <vizData:dimensions>
                                <!-- Use product name as the dimension -->
                                <vizData:DimensionDefinition name="Product" value="{name}"/>
                            </vizData:dimensions>
                            <vizData:measures>
                                <!-- Use units in stock as the measure -->
                                <vizData:MeasureDefinition name="Units In Stock" value="{units}"/>
                            </vizData:measures>
                        </vizData:FlattenedDataset>
                    </controls:dataset>
                    <controls:feeds>
                        <viz:FeedItem uid="categoryAxis" type="Dimension" values="Product"/>
                        <viz:FeedItem uid="valueAxis" type="Measure" values="Units In Stock"/>
                    </controls:feeds>
                </controls:VizFrame>
            </content>
        </Panel>

    </Page>
</mvc:View>
