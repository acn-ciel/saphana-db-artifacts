<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:controls="sap.viz.ui5.controls"
    xmlns:viz="sap.viz.ui5.controls.common.feeds"
    xmlns:vizData="sap.viz.ui5.data"

    controllerName="febootcamp.controller.Page1">

    <Page id="page1" title="{i18n>page1}">
        <Title text="Hello, Rochelle Ann" level="H1" class="pageOneTitle" />
        <Button id="pageOneButton" text="Click to say Hello!" press="onButtonPress" icon="sap-icon://message-popup"/>
        
        <Panel expandable="true" expanded="true" headerText="VizFrame Chart">
            <content>
                <controls:VizFrame id="idVizFrame" vizType="column" width="100%" height="400px"
                                uiConfig="{ applicationSet: 'fiori' }"
                                vizProperties="{
                                    'title': {
                                    'text': 'Products Unit in Stock',
                                    'visible': true
                                    }
                                }">

                    <controls:dataset>
                        <vizData:FlattenedDataset data="{/Products}">
                            <vizData:dimensions>
                                <vizData:DimensionDefinition name="Product" value="{name}"/>
                            </vizData:dimensions>
                            <vizData:measures>
                                <vizData:MeasureDefinition name="Units In Stock" value="{units}"/>
                            </vizData:measures>
                        </vizData:FlattenedDataset>
                    </controls:dataset>
                    <controls:feeds>
                        <viz:FeedItem uid="categoryAxis" type="Dimension" values="Product"/>
                        <viz:FeedItem uid="valueAxis" type="Measure" values="Units In Stock"/>
                    </controls:feeds>
                </controls:VizFrame>
            </content>
        </Panel>
        <Panel expandable="true" expanded="true" headerText="List">
            <List id="productDetail" items="{path: '/Products'}">
                <StandardListItem id="discontinued" title="{name}" description="Discontinued: {discontinued}" />
            </List>
        </Panel>
        <Button id="toPageTwo" text="Click here to go to Page 2!" press="toPageTwo">
        </Button>
    </Page>
</mvc:View>
